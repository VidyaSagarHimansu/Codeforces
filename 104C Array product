#include<bits/stdc++.h>
#define fast ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0)
using namespace std;
int main()
{
    fast;
    int n,ne=0,z=0,x;
    cin>>n;
    vector<int> a,b;
    for (int i = 0; i < n; i++) {
        cin>>x;
        a.push_back(x);
        if(a[i]<0)
            ne++;
        else if(a[i]==0)
            z++;
    }
    b=a;
    int dez[z+1],l=1,k=0;
    if(z>1)
    {
        for (int i = 0; i < n; i++) 
        {
            if(a[i]==0)
            {
                dez[k]=i;
                k++;
            }
        }
        for (int i = 0; i < k-1; i++) {
            cout<<"1 "<<dez[k-1]+1<<" "<<dez[i]+1<<"\n";
            a.erase(a.begin()+dez[i]);
        }
    }
    n=a.size();
    if(ne%2!=0)
    {
        int maxi=0;
        for (int i = 0; i < n; i++)
            if(a[i]<0)
                if(a[i]>a[maxi])
                    maxi=i;
        cout<<"1 "<<dez[k-1]<<" "<<maxi+1;
        dez[z]=maxi;
        a.erase(a.begin()+maxi);
    }
    n=a.size();
    cout<<"2 "<<dez[k-1]<<"\n";
    for (int i = 0,x1=0; i < b.size(); i++,x1++) {
        if(a[x1]!=b[i])
            continue;
        cout<<"1 "<<1<<" "<<i<<"\n";
    }
}
